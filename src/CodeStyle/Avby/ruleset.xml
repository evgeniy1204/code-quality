<?xml version="1.0"?>
<ruleset name="Avby">
    <description>The Avby coding standard.</description>

    <rule ref="Symfony">
        <exclude name="Symfony.Commenting.License"/>
        <exclude name="Symfony.Functions.Arguments"/>
        <exclude name="Symfony.ControlStructure.YodaConditions"/>
    </rule>

    <rule ref="Zend.NamingConventions.ValidVariableName.MemberVarContainsNumbers">
        <severity>0</severity>
    </rule>

    <rule ref="PEAR.WhiteSpace.ObjectOperatorIndent"/>
</ruleset>